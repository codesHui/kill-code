<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<!-- 注解注入 -->
	<context:annotation-config />

	<context:component-scan base-package="com.imi.service" />

	<context:component-scan base-package="com.imi.dao" />
	
	<context:component-scan base-package="com.imi.support" />

	<!--引入参数属性文件 -->
	<context:property-placeholder location="classpath:config.properties" />


	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
		
			<list>
				<value>classpath:messages/message_zh_CN</value>
			    <value>classpath:message/message</value>
				
			</list>
		</property>
		<property name="defaultEncoding">
			<value>UTF-8</value>
		</property>
	</bean>
	<import resource="spring-freemarker.xml" />
	<!-- hibernate 配置 -->
	<import resource="spring-hibernate.xml" />
	<!-- service -->
	<import resource="spring-service.xml" />
	<!-- shiro -->
	<import resource="spring-shiro.xml" />
	<!-- jbpm -->
<!-- 	<import resource="spring-jbpm.xml" /> -->
	
	
	<import resource="spring-email.xml" />


</beans>