<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
	default-lazy-init="true">

	<description>Email配置</description>

	<!-- 邮件发送器 -->




	<!-- 邮件发送器 -->
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="${mail.host}" />
		<property name="username" value="${mail.username}" />
		<property name="password" value="${mail.password}" />
		<property name="defaultEncoding" value="${mail.defaultEncoding}" />
		<property name="javaMailProperties">
			<props>
				<prop key="mail.smtp.auth">true</prop>

				<prop key="mail.smtp.starttls.enable">true</prop>
			</props>
		</property>
	</bean>




	<bean id="mailService" class="com.softvan.mail.MailService" abstract="true">
		<property name="freeMarkerConfigurer" ref="freeMarkerConfigurer" />

	</bean>
	
	
	<bean id="defaultMailService" class="com.softvan.mail.DefaultMailService"
  	  parent="mailService" >
  	  <property name="mailSender" ref="mailSender"/>
  	  
  	  </bean>


<!-- 	<bean id="mockMailService" class="com.softvan.mail.MockMailService"
  	  parent="mailService" >
 
  	  </bean>
 -->



</beans>